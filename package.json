{
  "name": "cose",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "postinstall": "patch-package",
    "prepare": "rm -rf dist ; tsc -p ./tsconfig/node-cjs.json",
    "build": "tsc",
    "build-all": "run-s build:*",
    "build:node-cjs": "run-s clean:node-cjs 'build -- -p ./tsconfig/node-cjs.json' pkgjson:node-cjs",
    "pkgjson:node-cjs": "node ./scripts/pkg-json.mjs ./tsconfig/node-cjs.json > ./dist/node/cjs/package.json",
    "clean:node-cjs": "rm -rf dist/node/cjs",
    "build:node-esm": "run-s clean:node-esm 'build -- -p ./tsconfig/node-esm.json' pkgjson:node-esm",
    "pkgjson:node-esm": "node ./scripts/pkg-json.mjs ./tsconfig/node-esm.json > ./dist/node/esm/package.json",
    "clean:node-esm": "rm -rf dist/node/esm",
    "build:browser": "run-s clean:browser 'build -- -p ./tsconfig/browser.json' pkgjson:browser",
    "pkgjson:browser": "node ./scripts/pkg-json.mjs ./tsconfig/browser.json > ./dist/browser/package.json",
    "clean:browser": "rm -rf dist/browser"
  },
  "author": "Jos√© F. Romaniello <jfromaniello@gmail.com> (https://joseoncode.com/)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "lodash.merge": "^4.6.2",
    "npm-run-all2": "^6.0.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.4.3",
    "cbor-x": "^1.5.4",
    "jose": "^4.14.6",
    "patch-package": "^8.0.0",
    "pkijs": "^3.0.15"
  },
  "imports": {
    "#runtime/*": "./src/runtime/node/*.ts"
  }
}
